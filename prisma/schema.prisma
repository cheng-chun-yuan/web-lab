generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  author    String
  content   String
  avatar    String?
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visitor {
  id        Int      @id @default(autoincrement())
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
